<script>
function changeQuantity(productId, change) {
    const input = document.getElementById('qty-' + productId);
    let newVal = parseInt(input.value) + change;
    
    if (newVal >= 1 && newVal <= 10) {
        input.value = newVal;
        document.getElementById('qty-form-' + productId).submit();
    }
}
</script>

